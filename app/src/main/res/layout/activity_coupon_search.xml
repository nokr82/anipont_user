<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:orientation="horizontal">
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="149dp"
            android:layout_height="match_parent"
            android:layout_marginTop="43.5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.5dp"
                android:text="쿠폰/포인트\n조회"
                android:textColor="#ffff"
                android:textSize="24dp" />




        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="9.5dp"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_marginLeft="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:gravity="center"
               >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="#ffffff"
                    android:lineSpacingExtra="25sp"
                    android:text="사용/조회"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:background="@drawable/background_strock_707070"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="#ffffff"
                    android:lineSpacingExtra="25sp"
                    android:text="쿠폰/포인트 조회"
                    />

            </LinearLayout>
        </LinearLayout>
        
        
        <LinearLayout
            android:layout_marginTop="15.5dp"
            android:layout_width="match_parent"
            android:layout_height="30.5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#90000000">

            <EditText
                android:background="@null"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_weight="1"
                android:lineSpacingExtra="25sp"
                android:text="사용할 포인트를 입력하세요."
                android:textColor="#ffffff"
                android:textSize="10sp" />
            
            
            <ImageView
                android:layout_marginRight="15.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_close"/>



        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="9.5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal"
           >
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:background="#ffffff"
                android:layout_height="match_parent">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:gravity="right"
                    android:layout_marginRight="11dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        android:textColor="#c2c2c2"
                        android:letterSpacing="-0.08"
                        android:lineSpacingExtra="1sp"
                        android:gravity="center_horizontal"
                        android:text="500 P 이상부터 사용 가능"
                        />
                    <TextView
                        android:layout_marginTop="8.5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="27sp"
                        android:textColor="#0066b0"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="8sp"
                        android:gravity="end"
                        android:text="1,000 P"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:orientation="vertical"
                  >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:letterSpacing="-0.05"
                                android:lineSpacingExtra="-15sp"
                                android:text="1"
                                android:textColor="#666666"
                                android:textSize="24sp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="24sp"
                                android:textColor="#666666"
                                android:letterSpacing="-0.05"
                                android:lineSpacingExtra="-15sp"
                                android:text="2"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="24sp"
                                android:textColor="#666666"
                                android:letterSpacing="-0.05"
                                android:lineSpacingExtra="-15sp"
                                android:text="3"
                                />

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:letterSpacing="-0.05"
                                android:lineSpacingExtra="-15sp"
                                android:text="4"
                                android:textColor="#666666"
                                android:textSize="24sp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="24sp"
                                android:textColor="#666666"
                                android:letterSpacing="-0.05"
                                android:lineSpacingExtra="-15sp"
                                android:text="5"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:letterSpacing="-0.05"
                                android:lineSpacingExtra="-15sp"
                                android:text="6"
                                android:textColor="#666666"
                                android:textSize="24sp" />

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="24sp"
                                android:textColor="#666666"
                                android:letterSpacing="-0.05"
                                android:lineSpacingExtra="-15sp"
                                android:text="7"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="24sp"
                                android:textColor="#666666"
                                android:letterSpacing="-0.05"
                                android:lineSpacingExtra="-15sp"
                                android:text="8"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="24sp"
                                android:textColor="#666666"
                                android:letterSpacing="-0.05"
                                android:lineSpacingExtra="-15sp"
                                android:text="9"
                                />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                               android:src="@mipmap/btn_del"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="24sp"
                                android:textColor="#666666"
                                android:letterSpacing="-0.05"
                                android:lineSpacingExtra="-15sp"
                                android:text="0"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:background="#b894ff"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="21sp"
                                android:textColor="#ffffff"
                                android:letterSpacing="-0.05"
                                android:lineSpacingExtra="-12sp"
                                android:text="사용"
                                />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="25dp"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:layout_height="match_parent">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginLeft="9.5dp"
                  android:orientation="vertical"
                    android:background="#ffff">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8sp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#cbcbcb"
                        android:letterSpacing="-0.05"
                        android:lineSpacingExtra="1sp"
                        android:text="내포인트"
                        />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#303030"
                        android:letterSpacing="-0.05"
                        android:lineSpacingExtra="-9sp"
                        android:text="3,000 P"
                        />
                    <View
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:background="#e1e1e1"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8sp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#cbcbcb"
                        android:letterSpacing="-0.05"
                        android:lineSpacingExtra="1sp"
                        android:text="남은 포인트"
                        />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#666666"
                        android:letterSpacing="-0.05"
                        android:lineSpacingExtra="-9sp"
                        android:text="2,000 P"
                        />


                </LinearLayout>


                

            </LinearLayout>



        </LinearLayout>




    </LinearLayout>
    
    
    




    
    
</LinearLayout>