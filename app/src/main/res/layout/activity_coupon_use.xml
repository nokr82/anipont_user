<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:orientation="horizontal">
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="149dp"
            android:layout_marginLeft="8.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="43.5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="사용/조회"
                android:textColor="#ffff"
                android:textSize="24dp" />

            <LinearLayout
                android:id="@+id/use_op_LL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16.5dp"
                android:gravity="center_horizontal"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="1sp"
                android:text="내 포인트 사용/조회"
                android:textColor="#ffffff"
                android:textSize="9sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#ffff"/>


            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="9.5dp"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_marginLeft="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/useLL"
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:gravity="center"
              >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="#ffffff"
                    android:lineSpacingExtra="25sp"
                    android:text="사용/조회"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/couponLL"
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="#ffffff"
                    android:lineSpacingExtra="25sp"
                    android:text="쿠폰/포인트 조회"
                    />

            </LinearLayout>
        </LinearLayout>
        
        
        <LinearLayout
            android:layout_marginTop="15.5dp"
            android:layout_width="match_parent"
            android:layout_height="30.5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#90000000"
            android:visibility="gone">

            <EditText
                android:id="@+id/phonET"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textColorHint="#ffffff"
                android:layout_marginLeft="50dp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="25sp"
                android:hint="휴대전화번호를 눌러주세요."/>
            
            
            <ImageView
                android:layout_marginRight="15.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_close"/>



        </LinearLayout>
        <FrameLayout
            android:id="@+id/main_frame"
            android:layout_marginTop="9.5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           />





    </LinearLayout>
    
    
    




    
    
</LinearLayout>