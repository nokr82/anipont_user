<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background_gradient"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:id="@+id/logoLL"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@mipmap/intro_logo">

    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@mipmap/main_bg">




        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/storeNameTV"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:text="스타벅스 홍대점"
                android:layout_height="match_parent"
                android:background="#ffff">
            </TextView>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/useLL"
                    android:layout_width="0dp"
                    android:layout_weight="0.15"
                    android:background="#313131"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#ffffff"
                        android:lineSpacingExtra="4.5sp"
                        android:text="사용/조회"
                        />
                </LinearLayout>


<LinearLayout
    android:id="@+id/couponLL"
    android:layout_width="0dp"
    android:layout_weight="0.2"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#0078ce">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="4.5sp"
        android:text="쿠폰/포인트 조회"
        />
</LinearLayout>






            </LinearLayout>



        </LinearLayout>







    </RelativeLayout>



</RelativeLayout>