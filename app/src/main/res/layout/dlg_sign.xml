<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600dp"
    android:background="#ffffff"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/backIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@mipmap/arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="서명하기"
            android:textSize="18dp"
            android:textStyle="bold" />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c9c9c9" />

    <RelativeLayout
        android:id="@+id/signRL"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:background="@drawable/background_strock_e7e7e7">
        <TextView
            android:id="@+id/hintSignTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="서명해주세요"
            android:gravity="center"/>

        <!--<kr.co.hoit.android.base.DrawingView-->
        <!--android:id="@+id/signDV"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->
    </RelativeLayout>
    <TextView
        android:id="@+id/resignTV"
        android:layout_width="150dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="#c9c9c9"
        android:gravity="center"
        android:text="재서명하기"
        android:textColor="#ffffff"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/writeTV"
        android:layout_width="150dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:layout_marginBottom="19dp"
        android:layout_marginTop="30dp"
        android:background="#0871bf"
        android:gravity="center"
        android:text="서명하기"
        android:textColor="#ffffff"
        android:textSize="20dp" />

</LinearLayout>