<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="250dp"
    android:layout_height="wrap_content" android:padding="5dp">

        <TextView
            android:id="@+id/item_couponNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="#000099"
            android:text="쿠폰이름"
            android:textStyle="bold" />

    <TextView
        android:id="@+id/item_couponTypeTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="3"
        android:textSize="12sp"
        android:textColor="#090909"
        android:text="쿠폰타입"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/item_messageTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#666666"
        android:text="메세지"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#979797"
            android:textSize="11sp"
            android:text="사용 가능 요일 :"/>
        <TextView
            android:id="@+id/item_weekTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="주중"
            android:textSize="11sp"
            android:visibility="gone"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/item_satTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#0066b0"
            android:visibility="gone"
            android:text="토"/>
        <TextView
            android:id="@+id/item_sunTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#ff0066"
            android:visibility="gone"
            android:text="일"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:textSize="13sp"
            android:letterSpacing="-0.24"
            android:text="유효기간 :"/>
        <TextView
            android:id="@+id/item_validityTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#ff0000"
            android:text="2018-12-31"/>
    </LinearLayout>
</LinearLayout>