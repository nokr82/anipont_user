<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="9.5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:background="#ffffff"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:gravity="right"
                android:layout_marginRight="11dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:textColor="#c2c2c2"
                    android:letterSpacing="-0.08"
                    android:lineSpacingExtra="1sp"
                    android:gravity="center_horizontal"
                    android:text="500 P 이상부터 사용 가능"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/use_pointTV"
                    android:layout_marginTop="8.5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="27sp"
                    android:textColor="#0066b0"
                    android:letterSpacing="-0.03"
                    android:lineSpacingExtra="8sp"
                    android:gravity="end"
                    android:text="0"
                    />
                    <TextView
                        android:layout_marginTop="8.5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="27sp"
                        android:textColor="#0066b0"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="8sp"
                        android:gravity="end"
                        android:text="P"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:onClick="onClick"
                        android:id="@+id/oneLL"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="-15sp"
                            android:text="1"
                            android:textColor="#666666"
                            android:textSize="24sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:onClick="onClick"
                        android:id="@+id/twoLL"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textColor="#666666"
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="-15sp"
                            android:text="2"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:onClick="onClick"
                        android:id="@+id/threeLL"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textColor="#666666"
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="-15sp"
                            android:text="3"
                            />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:onClick="onClick"
                        android:id="@+id/fourLL"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="-15sp"
                            android:text="4"
                            android:textColor="#666666"
                            android:textSize="24sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:onClick="onClick"
                        android:id="@+id/fiveLL"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textColor="#666666"
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="-15sp"
                            android:text="5"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:onClick="onClick"
                        android:id="@+id/sixLL"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="-15sp"
                            android:text="6"
                            android:textColor="#666666"
                            android:textSize="24sp" />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:onClick="onClick"
                        android:id="@+id/sevenLL"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textColor="#666666"
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="-15sp"
                            android:text="7"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:onClick="onClick"
                        android:id="@+id/eightLL"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textColor="#666666"
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="-15sp"
                            android:text="8"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:onClick="onClick"
                        android:id="@+id/nineLL"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textColor="#666666"
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="-15sp"
                            android:text="9"
                            />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:id="@+id/backLL"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/btn_del"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:onClick="onClick"
                        android:id="@+id/zeroLL"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textColor="#666666"
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="-15sp"
                            android:text="0"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:onClick="onClick"
                        android:id="@+id/useLL"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="#b894ff"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="21sp"
                            android:textColor="#ffffff"
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="-12sp"
                            android:text="사용"
                            />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="25dp"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginLeft="9.5dp"
                android:orientation="vertical"
                android:background="#ffff">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#cbcbcb"
                    android:letterSpacing="-0.05"
                    android:lineSpacingExtra="1sp"
                    android:text="내포인트"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/pointTV"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#303030"
                    android:letterSpacing="-0.05"
                    android:lineSpacingExtra="-9sp"
                    android:text="3000"
                    />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#303030"
                        android:letterSpacing="-0.05"
                        android:lineSpacingExtra="-9sp"
                        android:text="P"
                        />
                </LinearLayout>
                <View
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#e1e1e1"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#cbcbcb"
                    android:letterSpacing="-0.05"
                    android:lineSpacingExtra="1sp"
                    android:text="남은 포인트"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/left_pointTV"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#666666"
                    android:letterSpacing="-0.05"
                    android:lineSpacingExtra="-9sp"
                    android:text="2000"
                    />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#666666"
                        android:letterSpacing="-0.05"
                        android:lineSpacingExtra="-9sp"
                        android:text="P"
                        />
                </LinearLayout>

            </LinearLayout>

            <ListView
                android:id="@+id/couponListLV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


        </LinearLayout>



    </LinearLayout>




</LinearLayout>