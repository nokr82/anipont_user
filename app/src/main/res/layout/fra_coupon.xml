<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="9.5dp"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="22dp"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/limit_pointTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:letterSpacing="-0.08"
                    android:lineSpacingExtra="1sp"
                    android:text="500 P 이상부터 사용 가능"
                    android:textColor="#c2c2c2"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/use_pointTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8.5dp"
                        android:gravity="end"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="8sp"
                        android:text="0"
                        android:textColor="#0066b0"
                        android:textSize="54sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8.5dp"
                        android:gravity="end"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="8sp"
                        android:text="P"
                        android:textColor="#0066b0"
                        android:textSize="54sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/use_point_unitTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:letterSpacing="-0.08"
                    android:lineSpacingExtra="1sp"
                    android:text="포인트사용단위는 500P입니다."
                    android:textColor="#c2c2c2"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/oneLL"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="onClick">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="-15sp"
                            android:text="1"
                            android:textColor="#666666"
                            android:textSize="48sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/twoLL"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="onClick">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="-15sp"
                            android:text="2"
                            android:textColor="#666666"
                            android:textSize="48sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/threeLL"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="onClick">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="-15sp"
                            android:text="3"
                            android:textColor="#666666"
                            android:textSize="48sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/fourLL"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="onClick">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="-15sp"
                            android:text="4"
                            android:textColor="#666666"
                            android:textSize="48sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fiveLL"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="onClick">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="-15sp"
                            android:text="5"
                            android:textColor="#666666"
                            android:textSize="48sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/sixLL"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="onClick">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="-15sp"
                            android:text="6"
                            android:textColor="#666666"
                            android:textSize="48sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/sevenLL"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="onClick">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="-15sp"
                            android:text="7"
                            android:textColor="#666666"
                            android:textSize="48sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/eightLL"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="onClick">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="-15sp"
                            android:text="8"
                            android:textColor="#666666"
                            android:textSize="48sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/nineLL"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="onClick">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="-15sp"
                            android:text="9"
                            android:textColor="#666666"
                            android:textSize="48sp" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/backLL"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="55dp"
                            android:src="@mipmap/btn_del" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/zeroLL"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="onClick">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="-15sp"
                            android:text="0"
                            android:textColor="#666666"
                            android:textSize="48sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/useLL"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#b894ff"
                        android:gravity="center"
                        android:onClick="onClick">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="-0.05"
                            android:lineSpacingExtra="-12sp"
                            android:text="사용"
                            android:textColor="#ffffff"
                            android:textSize="42sp" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <me.grantland.widget.AutofitTextView
                android:id="@+id/titleTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="포인트 적립"
                android:textColor="#fff"
                android:textSize="48dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9.5dp"
                android:background="#ffff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:letterSpacing="-0.05"
                    android:lineSpacingExtra="1sp"
                    android:text="내포인트"
                    android:textColor="#cbcbcb"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pointTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:letterSpacing="-0.05"
                        android:lineSpacingExtra="-9sp"
                        android:text="3000"
                        android:textColor="#303030"
                        android:textSize="36sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:letterSpacing="-0.05"
                        android:lineSpacingExtra="-9sp"
                        android:text="P"
                        android:textColor="#303030"
                        android:textSize="36sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_marginTop="10dp"
                    android:background="#e1e1e1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:letterSpacing="-0.05"
                    android:lineSpacingExtra="1sp"
                    android:text="남은 포인트"
                    android:textColor="#cbcbcb"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/left_pointTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:letterSpacing="-0.05"
                        android:lineSpacingExtra="-9sp"
                        android:text="2000"
                        android:textColor="#666666"
                        android:textSize="36sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:letterSpacing="-0.05"
                        android:lineSpacingExtra="-9sp"
                        android:text="P"
                        android:textColor="#666666"
                        android:textSize="36sp" />
                </LinearLayout>

            </LinearLayout>

            <ListView
                android:id="@+id/couponListLV"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>